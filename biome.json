{
    "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "files": {
        "ignoreUnknown": true
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    }
}